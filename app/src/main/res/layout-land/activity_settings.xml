<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http:/s/schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="baja.isave.settings">

    <TextView
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/normalbutton"
            android:id="@+id/normalButton"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:onClick="normalPressed"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/flip1"
            android:id="@+id/flipButton"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:onClick="flipPressed"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/shake1"
            android:id="@+id/shakeButton"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:onClick="shakePressed"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/math"
            android:id="@+id/mathButton"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:onClick="mathPressed"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <Button
        android:id="@id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/background_validate"/>

</RelativeLayout>
