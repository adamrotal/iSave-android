<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:background="#000000"
    tools:context="baja.isave.myClock">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/sun"
                android:id="@+id/weather1"
                android:background="#00000000"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                app:srcCompat="@drawable/clock"
                android:id="@+id/alarm1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="alarmPressed"/>

            <ImageButton
                android:scaleType="fitXY"
                android:layout_width="88dp"
                android:layout_height="19dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/logo_i_hijau"
                android:background="#00000000"
                android:id="@+id/imageButton3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <TextClock
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/textClock"
            android:textSize="75dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="187dp"
                android:layout_height="202dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/cloud1"
                android:id="@+id/imageView2" />

            <TextView
                android:text="17Â°C"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:id="@+id/temperature"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="60dp" />


        </LinearLayout>

        <TextView
            android:text="Mostly Cloudy"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:id="@+id/statusWeather"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="30dp" />

        <TextView
            android:text="Kota Bandung"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:id="@+id/location"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="30dp" />




    </LinearLayout>

</ScrollView>
