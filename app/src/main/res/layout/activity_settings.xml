<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http:/s/schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="baja.isave.settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <ImageButton
                android:layout_width="175dp"
                android:layout_height="175dp"
                app:srcCompat="@drawable/normalbutton"
                android:id="@+id/normalButton"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:onClick="normalPressed"/>

            <ImageButton
                android:layout_width="175dp"
                android:layout_height="175dp"
                app:srcCompat="@drawable/flip1"
                android:id="@+id/flipButton"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:onClick="flipPressed"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageButton
                android:layout_width="175dp"
                android:layout_height="175dp"
                app:srcCompat="@drawable/shake1"
                android:id="@+id/shakeButton"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:onClick="shakePressed"/>

            <ImageButton
                android:layout_width="175dp"
                android:layout_height="175dp"
                app:srcCompat="@drawable/math"
                android:id="@+id/mathButton"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:onClick="mathPressed"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
