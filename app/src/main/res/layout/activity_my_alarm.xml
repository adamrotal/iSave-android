<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#000000"
    tools:context="baja.isave.myAlarm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sun"
            android:id="@+id/weather2"
            android:background="#00000000"
            android:onClick="weatherPressed"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            app:srcCompat="@drawable/clock"
            android:id="@+id/alarm2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="88dp"
            android:layout_height="19dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/logo_i_putih"
            android:background="#00000000"
            android:id="@+id/imageButton3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <TimePicker
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:amPmTextColor="@color/colorPrimaryDark"
        android:headerBackground="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:numbersBackgroundColor="@color/white" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/sleep"
        android:id="@+id/sleepButton"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_marginStart="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/settings"
        android:layout_marginStart="26dp"
        android:id="@+id/settingButton"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:onClick="settingsPressed"
        android:layout_alignTop="@+id/sleepButton"
        android:layout_toEndOf="@+id/sleepButton"
        android:layout_marginTop="11dp" />


</RelativeLayout>
